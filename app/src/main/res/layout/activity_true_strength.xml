<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaleb.truestrength.ProfileScreen"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/table">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contextClickable="false"
                android:id="@+id/menuTable"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extra"
                        android:id="@+id/extraButton"
                        android:layout_column="0"
                        android:layout_weight="0.5"
                        android:textColor="#eeff00"
                        android:background="@drawable/yellowborder"
                        android:layout_gravity="center" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My   Profile"
                        android:id="@+id/myprofileButton"
                        android:layout_column="1"
                        android:layout_weight="0.25"
                        android:background="#eeff00"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:onClick="myProfileClicked" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Exercise"
                        android:id="@+id/myexerciseButton"
                        android:layout_column="2"
                        android:layout_weight="0.25"
                        android:textColor="#eeff00"
                        android:background="@drawable/yellowborder"
                        android:layout_gravity="center"
                        android:onClick="myExerciseClicked" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="True Strength"
                        android:id="@+id/truestrengthButton"
                        android:layout_column="3"
                        android:layout_weight="0.25"
                        android:textColor="#eeff00"
                        android:background="@drawable/yellowborder"
                        android:layout_gravity="center"
                        android:onClick="trueStrengthClicked" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">


            <TextView
                android:text="EAT, LIFT, SLEEP, REPEAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/titleText"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <TextView
                android:text='True Strength applies the science of exercise and nutriton together with real world experience to deliver the most relevant health & fitness information and effective programming.   Our True Strength Coach Mike has been working within the fitness industry for numberous years. He holds a Bachelors Degree in Sport and Exercise Science (BSpExSc) and has been utilising different training methods and various nutrition practices to develope a coaching system that works!   Our vision is to have people "Look Good, Feel Good, Perform Better."'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:id="@+id/bodyText"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#ffffff"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>